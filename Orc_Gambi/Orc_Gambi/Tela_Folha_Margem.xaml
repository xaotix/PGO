                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>
        <WrapPanel Grid.Row="1">
            <Image Grid.Row="1" Source="Resources/Novo_Logo_2018.orc.png" HorizontalAlignment="Left"></Image>
            <Image Grid.Row="1" Source="Resources/fatura.png" HorizontalAlignment="Right" Margin="30,0,0,0"></Image>
            
        </WrapPanel>
                   
